{
  "name": "simple-my-blog",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": "Oii Woof",
  "license": "MIT",
  "scripts": {
    "dev": "vitepress dev docs",
    "build": "vitepress build docs && pagefind --source docs/.vitepress/dist",
    "serve": "vitepress serve docs",
    "type-check": "tsc --noEmit --skipLibCheck",
    "lint": "oxlint docs/.vitepress --tsconfig ./tsconfig.json",
    "lint:fix": "oxlint docs/.vitepress --tsconfig ./tsconfig.json --fix",
    "lint:md": "markdownlint docs/**/*.md --ignore docs/.vitepress",
    "check": "pnpm type-check && pnpm lint"
  },
  "dependencies": {
    "vue": "3.5.12"
  },
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.9.2",
    "autoprefixer": "^10.4.22",
    "less": "^4.2.0",
    "lint-staged": "^16.2.4",
    "markdownlint-cli": "^0.45.0",
    "oxlint": "^1.25.0",
    "pagefind": "^1.3.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.4.5",
    "vitepress": "1.6.4"
  },
  "lint-staged": {
    "*.{js,ts,vue,md}": []
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "search-insights"
      ]
    }
  }
}
